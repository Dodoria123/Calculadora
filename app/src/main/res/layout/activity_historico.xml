<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoricoActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="343dp"
        android:layout_height="63dp"
        android:textSize="30sp"
        android:textColor="#0000FF"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Histórico" />

    <TextView
        android:id="@+id/txtDescricaoHistorico"
        android:layout_width="match_parent"
        android:layout_height="349dp"
        android:layout_above="@+id/btnLimparHistorico"
        android:layout_alignParentStart="true"
        android:text="TextView" />

    <Button
        android:id="@+id/btnLimparHistorico"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnVoltarCalculadora"
        android:layout_centerHorizontal="true"
        android:text="Limpar Histórico" />

    <Button
        android:id="@+id/btnVoltarCalculadora"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Voltar" />

</RelativeLayout>